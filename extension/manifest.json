{
  "manifest_version": 3,
  "name": "FairMarket AI",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.in/*", 
        "*://www.flipkart.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["model_weights.json"],
      "matches": ["<all_urls>"]
    }
  ]
}